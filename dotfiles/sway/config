include /etc/sway/config.d/*

# Window Appearance
default_border pixel 0
for_window [class=".*"] border pixel 0
gaps inner 10
gaps outer 10

# Some useful shortcuts
bindsym $mod+w exec librewolf
bindsym $mod+x exec /home/marshall/nix-config/dotfiles/rofi/scripts/powermenu.sh
bindsym $mod+s exec /home/marshall/nix-config/dotfiles/rofi/scripts/powermenu.sh

# Media controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +1%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -1%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
bindsym XF86Search exec wofi --show drun -G -I -m -d
bindsym XF86MonBrightnessUp exec light -A 1
bindsym XF86MonBrightnessDown exec light -U 1

# Run Waybar on start
exec waybar

# Run dunst on start
exec dunst

exec eww
exec /home/marshall/.config/eww/scripts/getweather
exec /home/marshall/.config/eww/scripts/getquotes
# Sway fading script
exec python3 /home/marshall/.local/bin/swayfader.py

# Defining colors         border     bg         text       indicator  child_border
client.focused        	 	#12151d    #12151d    #abb2bf    #c678dd    #12151d
client.unfocused        	#1e222a    #1e222a    #abb2bf	 #282c34    #282c34
client.focused_inactive 	#1e222a    #1e222a    #abb2bf    #282c34    #282c34
client.urgent	          	#e06c75    #1e222a    #abb2bf    #e06c75    #e06c75

bindsym $mod+Control+Shift+Right move workspace to output right
bindsym $mod+Control+Shift+Left move workspace to output left
bindsym $mod+Control+Shift+Down move workspace to output down
bindsym $mod+Control+Shift+Up move workspace to output up

output DP-1 mode 1920x1080@144Hz

bindsym $mod+p exec /home/marshall/.config/eww/launch_eww
bindsym $mod+o exec /home/marshall/.config/eww/launch_eww_side
bindsym $mod+n exec /home/marshall/.config/rofi/scripts/nmcli-rofi/nmcli-rofi

bindsym $mod+q kill
